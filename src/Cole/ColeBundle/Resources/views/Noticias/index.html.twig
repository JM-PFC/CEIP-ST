{% extends '::frontend.html.twig' %}

{% block body -%}
    <h1>Listas de Noticias</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                {#<th>Fecha</th>#}
                {#<th>Foto</th>#}
                <th>Categoria</th>
                {#<th>Contador</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('noticias_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descripcion| truncate(300,true)}}</td>
                {#<td>{{ entity.fecha }}</td>#}
                {#<td>{{ entity.foto }}</td>#}
                <td>{{ entity.categoria }}</td>
                {#<td>{{ entity.contador }}</td>#}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('noticias_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('noticias_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('noticias_new') }}">
                Crear nueva noticia
            </a>
        </li>
    </ul>
    {% endblock %}
