              <img id="foto" class="img-small"  src="">
          </div>
          <div id="por_defecto" class="oculto" >
            {% if entity.sexo == "Femenino" %}
              <img id="sin_foto" class="img-small" src="{{ asset('bundles/backend/images/perfil/SinFoto-niña.png') }}">
            {% else %}
