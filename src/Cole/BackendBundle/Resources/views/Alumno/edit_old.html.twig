{% extends 'BackendBundle:Default:index.html.twig' %}

{% block head %}{% endblock %}
{% block stylesheets %}{% endblock %}

{% block javascript %}
       

   <script> 
   $('#antiguo_alumno_edit #edit_alumno_cursoIngreso option:contains("{{ entity.cursoIngreso }}")').prop('selected', true); //deshabilita input
   $('#antiguo_alumno_edit .readonly').prop('readonly', true); //input sólo lectura

   $("#antiguo_alumno_edit #padres_dialog").dialog(
       {
        bgiframe: true,
        autoOpen: false,
        height: 320,
        width: 900,
        modal: false,
        resizable: false,
        close: function( event, ui ) {
        $(".ui-widget-overlay").remove();
        }
        //show: 'fade',
        //hide: 'fade',
        //buttons: {
       //Ok: function() {
       //   $(this).dialog('close');
       //} //end function for Ok button
    //}//end buttons
       }
    );
   $('#antiguo_alumno_edit #padres_dialog').on('dialogclose', function(event) {
     $('#antiguo_alumno_edit #padres_dialog').empty();
    });
    // Se deshabilita los botones de guardar y restablecer.
    if($("#antiguo_alumno_edit").find("#lista_cursos").length){ //Para alumnos activos no se deshabilita.
      $("#antiguo_alumno_submit").prop("disabled",true);
    }
    $("#antiguo_alumno_rest").prop("disabled",true);
    // Se añade opciones para que se pueda comprobar cuando modificamos el formulario para volver a mostrar los botones.
    $("#antiguo_alumno_edit #edit_alumno_cursoIngreso option:selected").attr("selected", "selected");
    $("#antiguo_alumno_edit #edit_alumno_observaciones").attr("value", $("#antiguo_alumno_edit #edit_alumno_observaciones").val());

    // Se elimina el contenido de la etiqueta de fecha de nacimiento para que muestre bien el aviso de error(se añade con css).
    $("#antiguo_alumno_edit label[for^='edit_'][for$='_fechaNacimiento']").text("");
    
    $("#antiguo_alumno_edit select option:selected").each(function(){
      $(this).closest("select").attr("seleccionado", $(this).val());
    });


    //Se elimina la opción de "Todos los cursos" de la lista de cursos.
    $("#antiguo_alumno_edit #lista_cursos select option:last").remove();
    $("#antiguo_alumno_edit #lista_cursos select option:last").css({"border-top":"none","font-weight":"lighter"});

    //Se deshabilita los cursos anteriores al último matriculado.
    var id="";
    $("#antiguo_alumno_edit #lista_cursos select option").each (function(){ 
      opt=$(this).text().replace(" de","");

      if(opt==$("#antiguo_alumno_edit #ultimo_curso").val()){
        id=$(this).attr("value");
        return false;
      }
    });
    $("#antiguo_alumno_edit #lista_cursos select option").each (function(){ 
      if($(this).attr("value")==id){
        return false;
      }else{
      $(this).attr("disabled",true);
      }
    });

   </script>

{% endblock %}

{% block body %}
    {# {{ form_enctype(form) }} es obsoleto en Symfony 2.3
    <form class="formulario_alumno" id="alumno_nuevo" action="{{ path('alumno_create') }}" novalidate method="post" autocomplete="off"{{ form_enctype(form) }}> #}
    {{form_start(edit_form, {'action':path('antiguo_alumno_update',{'id':entity.id}),'method':'Put','attr':{'class':'edit_alumno edit_antiguo_alumno', 'id':'antiguo_alumno_edit', 'alum':entity.id, novalidate:'novalidate', 'autocomplete':'off'}})}}

    {{ form_errors(edit_form) }}
    <div>
