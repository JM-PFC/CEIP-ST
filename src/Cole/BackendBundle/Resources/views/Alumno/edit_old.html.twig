        <button id="antiguo_alumno_buscar" type="button" name="antiguo_alumno[buscar]" >Buscar otro alumno</button>
      </div>
    </div>
    <div id="padres_dialog" title="Asignar Nuevo Responsable">
    </div>
        
    <div class="oculto">
