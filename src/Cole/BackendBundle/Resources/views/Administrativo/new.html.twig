{% extends 'BackendBundle:Default:index.html.twig' %}

{% block head %}{% endblock %}
{% block stylesheets %}{% endblock %}

{% block javascript %}
   
    <script >
        // Asígnamos un valor por defecto al input radio de los formularios de creación.
        $("form[id$='nuevo'] input[id$='_tipo_0']").attr("checked","checked");

        //Sólo se permite usar 2 de las feclas del teclado.
        $(document).on("keypress cut paste","#administrativo_nuevo #rama input",function(event) {
            if(event.keyCode !=38 && event.keyCode!=40 ){
                event.preventDefault();
            }
        });
    </script>

{% endblock %}

{% block body %}
    {{form_start(form, {'action':path('administrativo_create'),'method':'POST','attr':{'class':'formulario_administrativo', 'id':'administrativo_nuevo', novalidate:'novalidate', 'autocomplete':'off'}})}}

     {{ form_errors(form) }}
        
    <div >

    <div id="content-form-menu-sintabs">
        <div id="tab1" >
        <fieldset class="ajustada">
            <legend>Registro del personal administrativo</legend>
            <div class="parent">
                <div class="child">
                    <div class="izquierda">
                        {{ form_row(form.dni) }}
                        {{ form_row(form.nombre) }}
                        {{ form_row(form.apellido1) }}
                        {{ form_row(form.apellido2) }}
                        {{ form_row(form.direccion) }}
                        {{ form_row(form.localidad) }}
                        {{ form_row(form.provincia) }}
                        {{ form_row(form.cp) }}
                        {{ form_row(form.telefono) }}
                        {{ form_row(form.movil) }}
                        {{ form_row(form.email,{'attr':{'class': 'text_transform_none'}}) }}

                    </div>

                    <div class="block-one tipo_admin">

                            {{ form_row(form.tipo) }}
  
                                                                        

                    </div> 
                </div>
            </div>    
        </fieldset>       

        </div>
    </div>
        
    <div id="botones_form">
        {{ form_row(form.submit) }}
        {{ form_row(form.limpiar) }}
    </div>
    <div class="oculto">
        {{ form_rest(form) }} 
    </div>
    <div id="result"></div>
    </div>
    {{form_end(form)}}

{% endblock %}