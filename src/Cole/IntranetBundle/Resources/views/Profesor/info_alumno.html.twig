<div class="media">
	<div class="media-left  media-middle div_foto">
		{% if entity.foto != null %}
			<img id="foto_info" class="img-rounded " alt="{{entity}}" src="{{ asset('uploads/images/' ~ entity.foto) }}">
        {% else %}
       		{% if entity.sexo == "Femenino" %}
				<img id="foto_info" class="img-rounded " alt="Sin Foto" src="{{ asset('bundles/backend/images/perfil/SinFoto-niña.png') }}">
   			{% else %}
              	<img id="foto_info" class="img-rounded " alt="Sin Foto" src="{{ asset('bundles/backend/images/perfil/SinFoto-niño.png') }}">
           	{% endif %}
        {% endif %}
	</div>
	<div class="media-body">
		<div>
			<label class="col-xs-2">{% trans %}Nombre{% endtrans %}:</label> <span>{{entity}}</span>	
		</div>

		{% if entity.curso != null and entity.grupo != null %}
		<div class="hidden-sm visible-xs hidden-md hidden-lg">
			<label class="col-xs-2 pull-left">{% trans %}Curso{% endtrans %}:</label> 
			<span class="col-xs-8 pull-left no-padding">{{entity.curso.curso ~ " de " ~ entity.curso.nivel }}</span>
		</div>
		<div class="hidden-sm visible-xs hidden-md hidden-lg">	
			<label class="col-xs-2 pull-left">{% trans %}Grupo{% endtrans %}:</label>
			<span class="col-xs-8 no-padding pull-left" >{{entity.grupo.letra}}</span>
		</div>
		<div class="visible-sm hidden-xs visible-md visible-lg">
			<label class="col-xs-2 pull-left">{% trans %}Curso{% endtrans %}:</label> 
			<span class="col-xs-4 pull-left">{{entity.curso.curso ~ " de " ~ entity.curso.nivel }}</span>	
			<label class="col-xs-2 pull-left">{% trans %}Grupo{% endtrans %}:</label>
			<span class="col-xs-2 no-padding pull-left" >{{entity.grupo.letra}}</span>
		</div>

		{% endif %}
		
		<div>
			<label class="col-xs-2">{% trans %}Teléfono{% endtrans %}:</label> <span class="color_rojo">{% trans %}No disponible{% endtrans %}</span>	
		</div>
		
		<div class="hidden-sm visible-xs hidden-md hidden-lg">
			<label class="col-xs-2" >{% trans %}Edad{% endtrans %}:</label> <span>{{edad ~ " "}} {% trans %}años{% endtrans %}</span>	
		</div>
		
		{% if entity.grupoSangre != null %}
		<div class="">
			<label class="sangre col-xs-6" >{% trans %}Sangre{% endtrans %}:</label> <span>{{entity.grupoSangre}}</span>	
		</div>
		{% else %}
			<div>
				<label class="sangre col-xs-6">{% trans %}Grupo Sanguíneo{% endtrans %}:</label> <span class="color_rojo">{% trans %}No disponible{% endtrans %}</span>	
			</div>
		{% endif %}
	</div>
</div>
<h4 class="titulo-seccion">{% trans %}Responsables{% endtrans %}</h4>

{% if entity.responsable1 != null %}
