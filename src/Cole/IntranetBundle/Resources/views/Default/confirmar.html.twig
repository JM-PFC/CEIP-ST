
{% spaceless %}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<title>CEIP SANTA TERESA - Intranet</title>
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta name="author" content="CEIP SANTA TERESA">
	<meta name="description" content="CEIP SANTA TERESA - Intranet">
	<link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">

	<link rel="stylesheet" href="{{ asset('bundles/intranet/css/intranet.css') }}">
	<link rel="stylesheet" href="{{ asset('bundles/intranet/css/bootstrap/bootstrap.min.css') }}">
	{#
	<link rel="stylesheet" href="{{ asset('bundles/intranet/css/bootstrap-datepicker/css/bootstrap-datepicker.min.css') }}">

	#}
	<link rel="stylesheet" href="{{ asset('bundles/intranet/css/font-awesome-4.7.0/css/font-awesome.min.css') }}">
	<link href="{{ asset('bundles/cole/js/unitegallery-master/package/unitegallery/css/unite-gallery.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/cole/js/unitegallery-master/package/unitegallery/themes/default/ug-theme-default.css') }}" rel="stylesheet" type="text/css" />
{% block javascript %}
	<script src="{{asset('bundles/cole/js/jquery-1.11.2.js')}}" type="text/javascript"></script>
	<script type="text/javascript" src="{{ asset('bundles/backend/js/jquery-ui/jquery-ui.js') }}"></script>
	<script type="text/javascript" src="{{ asset('bundles/intranet/js/bootstrap/bootstrap.min.js') }}"></script>
	{#
	<script type="text/javascript" src="{{ asset('bundles/intranet/js/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>

	#}
	<script type="text/javascript" src="{{ asset('bundles/intranet/js/intranet.js') }}" async="async"></script>
	<script type="text/javascript" src="{{ asset('bundles/intranet/js/bootstrap-validator/js/validator.js') }}"></script>
	<script src="{{ asset('bundles/backend/js/jquery.mask.min.js') }}" type="text/javascript"></script>
	<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
	<script type="text/javascript" src="{{asset('bundles/cole/js/imgLiquid-min.js')}}"></script>
	<script type="text/javascript" src="{{asset('bundles/cole/js/unitegallery-master/dist/js/unitegallery.min.js')}}"></script>
    <script type="text/javascript" src="{{asset('bundles/cole/js/unitegallery-master/package/unitegallery/themes/default/ug-theme-default.js')}}"></script>

	<script>
	setTimeout(function(){ 

		$("#confirmar").closest("#wrapper").attr('style', 'padding-left: 0 !important');
		$('#btn_cancelar').appendTo('.container_submit>div');

	},10);
	</script>
{% endblock %}

</head>

<body id="intranet" locale="{{ app.request.getLocale() }}">
{% block body %}
	<header id="barra">
		{# Barra de navegación normal #}
		<nav class="navbar navbar-default navbar-fixed-top hidden-sm hidden-xs visible-md visible-lg">
			<div class="container-fluid">
				<div class="navbar-header">
					<button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
						<span class="sr-only">{% trans %}Menú de Navegación{% endtrans %}</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<div id="titulo_cabecera" class="navbar-brand">
						<img class="img-responsive img-header pull-left" alt="Logo del colegio" src="{{ asset('bundles/backend/images/logo_trans.png')}}">
						<div class="titulo no-seleccion pull-left">{% trans %}Colegio de Educación Infantil y Primaria{% endtrans %}<br> <strong class="no-seleccion c_naranja">Santa Teresa</strong> - Cádiz</div>
					</div>
				</div>
			</div>
		</nav>

		{# Barra de navegación móvil #}
		<div class="hidden-md hidden-lg visible-xs visible-sm">
			<div class="row">
				<div class="col-sm-12 col-xs-12">
					<div class="navbar-brand-movil">
						<img class="img-responsive img-header-movil pull-left" alt="Logo del colegio" src="{{ asset('bundles/backend/images/logo_trans.png')}}">
						<div class="titulo no-seleccion pull-left" >{% trans %}Colegio de Educación Infantil y Primaria{% endtrans %}<br> <strong class="no-seleccion c_naranja">Santa Teresa</strong> - Cádiz</div>
					</div>
				</div>
			</div>
		</div>

		{# Barra de navegación móvil#}
		<div class="row visible-xs visible-sm">
			<div class="col-sm-12 col-xs-12 barramenu">
				<nav class="navbar navbar-default">
					<div class="container-fluid">
						<div class="navbar-header">
							<button class="navbar-toggle boton-menu-movil" type="button" data-toggle="collapse" data-target="#menuMovil">
								<span class="sr-only">{% trans %}Menú de Navegación{% endtrans %}</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<h5 class="semilla">
								<i class="fa fa-book page-header-icon"></i>
								{% trans %}Panel de confirmación{% endtrans %}
							</h5>
						</div>
						
						 <div id="menuMovil" class="navbar-collapse submenuMovil collapse menu" style="height: auto;" >
							<ul class="nav navbar-nav navbar-right">
							</ul>
						</div>
					</div>
				</nav>
			</div>
		</div>
	</header>
	
	{# contenido #}
	<div id="wrapper" class="no_margin_left">
		<section>
			<article>
			{% block main %}
				<div id="page-content-wrapper">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 contenido-twig">
								<div id="enrutaje" class="enrutaje animated fadeIn hidden-sm hidden-xs breadcrumb breadcrumb-page">
									<div class="col-md-8 no-padding">
										<ul class="unstyled list-inline no-padding">

										</ul>
									</div>
									<div class="col-md-4 titulo-pagina">
										<h1>
											<i class="fa fa-book page-header-icon"></i>
											{% trans %}Panel de confirmación{% endtrans %}
										</h1>
									</div>
								</div>
								<div class="col-md-12 col-xs-12 col-sm-12 contenido-wrapper animated fadeIn">
									<div class="dashboard">
										{% for flash_message in app.session.flashBag.get('notice') %}
    										<div class="notificacion alert alert-success fade in">
        										{{ flash_message }}
    										</div>
										{% endfor %}
										{% for flash_message in app.session.flashBag.get('danger') %}
    										<div class="notificacion alert alert-danger fade in">
        										{{ flash_message }}
    										</div>
										{% endfor %}
			<h4 id="confirmar" class="titulo-seccion">{% trans %}Panel de confirmación{% endtrans %}</h4>

	<div class="tab-content panel_confirmacion">
		<p>{% trans %}La dirección del colegio Santa Teresa le da la bienvenida a la plataforma educativa del centro{% endtrans %}.</p>
		<p>{% trans %}Para acceder a tu área personal, debes cambiar la contraseña de acceso que te han proporcionado por otra diferente y definir una pregunta de seguridad. Si olvidas tu contraseña usaremos esta pregunta para restablecer la contraseña a la inicial{% endtrans %}. </p>

		<p>{% trans %}No podrás acceder al contenido de la plataforma educativa hasta que no actualices estos datos{% endtrans %}.</p>	
	</div>
	<ul class="piemovil navbar-fixed-bottom  unstyled inline hidden-xs">
		<li class="col-sm-11 col-xs-8 copyright">
			© Copyright C.E.I.P. Santa Teresa
		</li>

		{% set locale = app.request.getLocale() %}
		{% if locale == "es" %}
			<li id="barraidioma">
				<a href="{{ path(app.request.get('_route'),app.request.get('_route_params')|merge({'_locale': 'es'})) }}">
					<img class="img_confirm img-responsive img-header pull-right bandera banderaseleccionada" alt="Bandera de España" title="Cambiar idioma a Español" src="{{ asset('bundles/intranet/images/Spain.png')}}">
				</a>
				<a href="{{ path(app.request.get('_route'),app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
					<img class="img_confirm img-responsive img-header pull-right bandera" alt="Bandera de Reino Unido" title="Cambiar idioma a Inglés" src="{{ asset('bundles/intranet/images/United-Kingdom.png')}}">
				</a>
			</li>
		{% elseif locale == "en" %}
			<li id="barraidioma">
				<a href="{{ path(app.request.get('_route'),app.request.get('_route_params')|merge({'_locale': 'es'})) }}">
					<img class=" img_confirm img-responsive img-header pull-right bandera " alt="Bandera de España" title="Cambiar idioma a Español" src="{{ asset('bundles/intranet/images/Spain.png')}}">
				</a>
				<a href="{{ path(app.request.get('_route'),app.request.get('_route_params')|merge({'_locale': 'en'})) }}">
					<img class=" img_confirm img-responsive img-header pull-right bandera banderaseleccionada" alt="Bandera de Reino Unido" title="Cambiar idioma a Inglés" src="{{ asset('bundles/intranet/images/United-Kingdom.png')}}">
				</a>
			</li>
		{% endif %}
	</ul>
	{{form_start(form, {'method':'Put','attr':{'class':'intranet_edit', 'id':'confirmacion', 'data-toggle':"validator", 'role':"form" ,'novalidate':'novalidate', 'autocomplete':'off'}})}}
		{{ form_errors(form) }}
		<div class="col-xs-12 col-md-6 ">
			<h4  class="titulo-bloque"><i class="fa fa-expeditedssl"></i>{% trans %}Pregunta de seguridad{% endtrans %}</h4>
			<div class="animated fadeIn ">
				<div class="form-group has-feedback">
					<div class="input-group">
						<span class="input-group-addon ">
							{{ form_label(form.pregunta, 'Pregunta',{'label_attr':{'class': ' control-label', 'id':'intranet_' ~ form.pregunta.vars.id}}) }}
						</span>
						
						{% if locale == "es" %}
							{{ form_widget(form.pregunta,{'attr':{'class': 'form-control', 'type': 'text','data-error': 'Este campo no puede estar vacío', 'placeholder': 'Introduzca una pregunta' }}) }}
						{% elseif locale == "en" %}
							{{ form_widget(form.pregunta,{'attr':{'class': 'form-control', 'type': 'text','data-error': 'This field can not be blank', 'placeholder': 'Enter a question' }}) }}
						{% endif %}
					</div>
    				<div id="errores_pregunta" class="help-block with-errors"></div>
				</div>
				<div class="form-group has-feedback">
					<div class="input-group">
						<span class="input-group-addon ">
							{{ form_label(form.respuesta, 'Respuesta',{'label_attr':{'class': ' control-label', 'id':'intranet_' ~ form.respuesta.vars.id}}) }}
						</span>
						
						{% if locale == "es" %}
							{{ form_widget(form.respuesta,{'attr':{'class': 'form-control', 'type': 'text','data-error': 'Este campo no puede estar vacío', 'placeholder': 'Introduzca una respuesta' }}) }}
						{% elseif locale == "en" %}
							{{ form_widget(form.respuesta,{'attr':{'class': 'form-control', 'type': 'text','data-error': 'This field can not be blank', 'placeholder': 'Enter an answer' }}) }}
						{% endif %}
					</div>
    				<div id="errores_pregunta" class="help-block with-errors"></div>
				</div>
			</div>
		</div>
	
		<div id="password" class="col-xs-12 col-md-6 ">

			<h4 class="titulo-bloque"><i class="fa fa-key"></i>{% trans %}Actualizar contraseña{% endtrans %}</h4>
			<div  class="animated fadeIn ">

				<div class="form-group has-feedback">
				  {% if locale == "es" %}
					{{ form_label(form.password.first, 'Nueva Contraseña:',{'label_attr':{'class': 'col-md-5'}}) }}

					<div class="col-md-7">
						{{ form_widget(form.password.first,{'id':'new_pass','attr':{ 'class': 'form-control', 'type': 'password','data-error': 'Debe introducir un mínimo de 6 caracteres', 'placeholder': 'Mínimo 6 caracteres', 'data-minlength':"6", 'required':'true' }}) }}
						
						<div class="help-block with-errors"></div>
					</div>
                  {% elseif locale == "en" %}
					{{ form_label(form.password.first, 'New Password:',{'label_attr':{'class': 'col-md-5'}}) }}

					<div class="col-md-7">
						{{ form_widget(form.password.first,{'id':'new_pass','attr':{ 'class': 'form-control', 'type': 'password','data-error': 'You must enter a minimum of 6 characters', 'placeholder': 'Minimum of 6 characters', 'data-minlength':"6", 'required':'true' }}) }}
						
						<div class="help-block with-errors"></div>
					</div>

                  {% endif %}
				</div>
				<div class="form-group has-feedback">
				  {% if locale == "es" %}			
					{{ form_label(form.password.second, 'Repetir Contraseña:',{'label_attr':{'class': 'col-md-5'}}) }}

					<div class="col-md-7">

							{{ form_widget(form.password.second,{'id':'rep_pass','attr':{'class': 'form-control', 'type': 'password','data-match':'#new_pass','data-error': 'Debe introducir un mínimo de 6 caracteres', 'placeholder': 'Confirmar', 'data-match-error':'La contraseña no coincide' ,'data-minlength':"6", 'required':'true' }}) }}

						<div class="help-block with-errors"></div>
					</div>
				  {% elseif locale == "en" %}
					{{ form_label(form.password.second, 'Repeat password:',{'label_attr':{'class': 'col-md-5'}}) }}

					<div class="col-md-7">
							{{ form_widget(form.password.second,{'id':'rep_pass','attr':{'class': 'form-control', 'type': 'password', 'data-match':'#new_pass','data-error': 'You must enter a minimum of 6 characters','data-match-error':'Password does not match', 'placeholder': 'Confirm', 'data-minlength':"6", 'required':'true' }}) }}
						
						<div class="help-block with-errors"></div>
					</div>
				  {% endif %}
				</div>
			</div>
		</div>
		<div>
			<div class="container_submit">
				{{ form_row(form.submit,{'id':'intranet_'~form.submit.vars.id , 'attr':{'class': 'btn btn-primary' }}) }}		
				<a id="btn_cancelar" class="btn btn-danger" href="{{path('logout')}}" >{% trans %}Cancelar{% endtrans %}</a>

			</div>


		</div>


		<div class="hidden">
				{{ form_rest(form) }}
			</div>
	{{ form_end(form) }}
									</div>
									<div id="listadoAnuncios" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="listadoAnuncios"></div>
								</div>
								
								<div class="col-xs-3 col-sm-3 visible-xs visible-sm pull-right botonsubir wow fadeInLeft">
									<a class="go-top btn btn-default" href="#" style="display: none;">
										<i class="fa fa-arrow-up"></i>
										{% trans %}Subir{% endtrans %}
									</a>
								</div>
							</div>
						</div>
					</div>

				</div>
			{% endblock %}
			</article>
		</section>
	</div>
{% endblock %}
</body>
</html>
{% endspaceless %}







