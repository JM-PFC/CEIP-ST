{% extends  'IntranetBundle:Default:index.html.twig' %}

{% block migas %}
	<li class="tipo">
			Alumnado
	</li>
	<li>
		<a href="{{path('intranet')}}">
			{% trans %}Inicio{% endtrans %}
		</a>
	</li>
	<li class="active no-seleccion">
		{{ entity }}
	</li>
{% endblock %}
{% block perfil_responsable %}
	<li id="barramiperfil">
		<i class="fa fa-user"></i>
		<a href="{{ path('intranet') }}" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Panel del responsable">{{app.user|upper}} 
		</a>
	</li>
{% endblock %}
{% block usuario %}
	<div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
		<ul class="nav navbar-nav navbar-right">
			<li id="barramensajesmovil" class="barramensajes">
				<a href="/intranet/dashboard">
					<span class="fa fa-envelope-o animated swing"></span>
					<span class="label-as-badge label azul nummensajes" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Mensajes de correo sin leer">0</span>
					</a>
			</li>
			<li id="barraanunciosmovil" class="barramensajes">
				<a href="/intranet/dashboard">
					<span class="fa fa-newspaper-o animated swing"></span>
					<span class="label-as-badge label verde numanuncios" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Noticias Nuevas">0</span>
				</a>
			</li>
			<li id="barraalertasmovil" class="barramensajes">
				<a href="/intranet/es/dashboard">
					<span class="fa fa-comments animated swing"></span>
					<span class="label-as-badge label naranja numalertas" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Avisos de seguimientos sin leer">0</span>
				</a>
			</li>
			<li id="barramiperfil" class="dropdown">
				<a class="dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

   				{% if entity.foto != null %}
   				 	<img id="foto" class="img-rounded img-title " alt="{{entity}}" src="{{ asset('uploads/images/' ~ entity.foto) }}">
       				{% else %}
       					{% if entity.sexo == "Femenino" %}
       						<img id="sin_foto" class="img-rounded img-title " alt="Sin Foto" src="{{ asset('bundles/backend/images/perfil/SinFoto-niña.png') }}">
   						{% else %}
              				<img id="sin_foto" class="img-rounded img-title " alt="Sin Foto" src="{{ asset('bundles/backend/images/perfil/SinFoto-niño.png') }}">
           				{% endif %}
        			{% endif %}
					{{entity|upper }}
					<span class="caret"></span>
				</a>
				<ul id="enlacemiperfil" class="dropdown-menu">
					<li>
						<a href="/intranet/es/miperfil">
							<i class="fa fa-reddit"></i>
  							{% if entity.sexo == "Femenino" %}
               					{% trans %}Perfil alumna{% endtrans %}
           					{% else %}
               					{% trans %}Perfil alumno{% endtrans %}
           					{% endif %}
						</a>
					</li>
					<li class="divider"></li>
					<li>
						<a href="{{path('logout')}}">
							<i class="fa fa-sign-out"></i>
							{% trans %}Cerrar sesión{% endtrans %}
						</a>
					</li>
				</ul>
			</li>
		</ul>
	</div>
{% endblock %}

